{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist",
        "declarationMap": true,
        "sourceMap": true,
        "strict": false,
        "esModuleInterop": true,
        "noErrorTruncation": true,
        "forceConsistentCasingInFileNames": true
    }
}